div#banners
  display flex
  width 150.5%
  background var(--rin-ban)
  border var(--style-border-always)
  border-radius 12px
  overflow hidden
  position relative
  box-shadow var(--rin-shadow-border)
  flex-direction column
  transition .3s
  will-change transform
  animation slide-in .6s .1s backwards
  background-size cover
  background-position center
  background-repeat no-repeat

  #home_top &
    height 100%
    +maxWidth1200()
      height calc(328px + .5rem)

  :not(.flink)&:hover
    box-shadow var(--rin-shadow-main)

  .banner-button-group
    position absolute
    right 2rem
    top 2rem
    display flex

    +maxWidth768()
      display none

  .banner-button
    padding 8px 12px
    background var(--rin-secondbg)
    border-radius 12px
    color var(--rin-fontcolor)
    display flex
    align-items center
    z-index 1
    transition .3s
    cursor pointer
    box-shadow var(--rin-shadow-black)

    &.secondary
      background var(--rin-secondbg)
      border var(--style-border-always)
      color var(--rin-lighttext)
      margin-right 1rem
      box-shadow var(--rin-shadow-border)

    &:hover
      background var(--rin-theme)
      color var(--rin-fontcolor)

    i
      margin-right 8px
      font-size 1rem

  /.banners-title
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 90%
    display flex
    flex-direction column

    &-big
      font-size clamp(24px, 3vw, 48px)
      line-height 1
      font-weight 700
      position relative
      top 50%
      transform translateY(-50%)
      text-align center
      margin-bottom 8px

    &-small
      font-size clamp(15px, 1.5vw, 48px)
      line-height 1
      color var(--rin-secondtext)
      margin-top 0px
      margin-bottom 0.5rem
      margin-left 2px
      text-align center

  /.flink
    .banners-title
      top 1.5rem

  .bannerText
    font-size 4rem
    line-height 4rem
    font-weight 700

/.tags-group-all
  display flex

  #home_top &
    +maxWidth600()
      opacity 0.06
      filter blur(8px)
      z-index -1

  &.nowrapMove
    padding-bottom 2rem

    .tags-group-wrapper
      margin-top: 7rem
      animation: rowleft 120s linear infinite
      display flex

      +maxWidth768()
        margin-top 7.5rem

    .tags-group-icon
      border-radius 50%

      img
        min-width 100%
        min-height 100%
        border-radius 50%
        object-fit cover

  .tags-group-icon-pair
    margin-left 1rem
    user-select none

    a img
      border-radius 50%

    /.tags-group-icon
      position relative
      width 120px
      height 120px
      border-radius 30px
      display flex
      align-items center
      justify-content center
      color #fff
      font-size 66px
      font-weight 700
      box-shadow var(--rin-shadow-blackdeep)

      +maxWidth768()
        .flink &
          width 70px
          height 70px

      &:nth-child(even)
        margin-top 1rem
        transform translate(-60px)

      img
        width 60%

.author-content
  display flex
  flex-wrap wrap
  justify-content space-between
  width 100%
  gap .5rem

  +maxWidth768()
    margin-top 0
    flex-direction column

  .author-content-item
    +maxWidth1300()
      animation slide-in .6s 0s backwards
    +maxWidth768()
      width 100% !important
      padding 1rem

.author-content.author-content-item.sharePage
  height 19rem
  background-size cover
  color var(--rin-fontcolor)
  overflow hidden
  margin-top 0
  margin-bottom: 12px

.author-content-item
  flex 4
  border-radius 12px
  background var(--rin-card-bg)
  border var(--style-border-always)
  box-shadow var(--rin-shadow-border)
  position relative
  overflow hidden
  padding 1rem 2rem

  &.single
    width 100%

  .author-content-item-title
    font-size 36px
    font-weight 700
    line-height 1

  .author-content-item-tips
    opacity .8
    font-size .6rem
    margin-bottom .5rem

  .content-bottom
    margin-top auto
    display flex
    align-items center
    justify-content space-between

    .icon-group
      display flex

      i
        display inline-block
        width 22px
        height 18px
        margin-right .5rem

  .card-content
    position absolute
    width 100%
    z-index 2
    height 100%
    top 0
    left 0
    display flex
    flex-direction column
    padding 1rem 2rem

    +maxWidth768()
      padding 1rem

    .author-content-item-title
      margin-bottom .5rem

    .banner-button-group
      position absolute
      bottom 1rem
      right 2rem

      .banner-button
        height 40px
        width 118px
        border-radius 20px
        justify-content center
        background var(--rin-black-op)
        color var(--rin-fontcolor)
        display flex
        align-items center
        z-index 1
        transition .3s
        cursor pointer
        backdrop-filter saturate(180%) blur(20px)
        -webkit-backdrop-filter blur(20px)
        transform translateZ(0)

        &:hover
          background var(--rin-main)
          color var(--rin-card-bg)

        i
          margin-right 8px
          font-size 22px

+maxWidth900()
  .author-content-item
    .card-content
      .banner-button-group
        right 1rem
        bottom 1rem

      .banner-button-group
        .banner-button
          background 0 0
          color var(--rin-fontcolor)
          padding 0
          width 30px
          height 30px

          i
            margin-right 0
            font-size 1.5rem

      .banner-button-text
        display none

